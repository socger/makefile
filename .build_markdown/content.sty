\usepackage{csvsimple}

\usepackage{pgfplotstable}
\usepackage{booktabs,colortbl}

\newcommand{\tab}[2]{

\pgfplotstableset{
create on use/Mpk/.style={
create col/expr={\pgfplotstablerow+1}}
}

\pgfplotstabletypeset[
	col sep=comma,
	%sci,sci 10e,precision=3,sci zerofill,
	fixed,fixed zerofill,precision=1,
	every even row/.style={before row={\rowcolor[gray]{0.9}}},
	every head row/.style={before row=\toprule, after row=\midrule},
	every last row/.style={after row=\bottomrule},	
	columns/Mpk/.style={precision=0},	
	#2
]{#1}
}


% Ērtai grafiku veidošanai:
\usepackage{subfigure}

\newcommand{\plot}[2]{ % Bez šī varētu iztikt, ja nebūtu vajadzīgs caption virs grafika
	\begin{figure}[!ht]
		\caption{#2}
		\center
		\Oldincludegraphics{#1}
	\end{figure}
}

\newcommand{\subplot}[2]{ % Komandas pielietojumu skatīt datormodelēšanas darbos
	\subfigure[#2]{
            \Oldincludegraphics[width=0.35\textwidth]{#1}
           	}
}
 

